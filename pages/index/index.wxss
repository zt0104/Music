/* heart -recommed */

/* scroll-view */
scroll-view {
  margin-top: 20rpx;
  width: 100%;
  display: flex;
 height: 300rpx;
}
.scroll-item{
  display: flex;
  flex-direction:column;
  align-items: center;
}
.scroll-item text{
  margin: 10rpx 0 0 10rpx;
  /* padding-left: 20rpx; */
  font-size: 26rpx;
  /* 多行文本溢出隐藏 省略号代替*/
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical; /*设置对其模式*/
  -webkit-line-clamp: 2; /*设置多行的行数*/
}
scroll-view image{
  width: 200rpx;
  height: 190rpx;
  margin: 0 0 0 15rpx;
  border-radius: 20rpx;
 }

 /* ranking */

/* 排行榜  */
.topList {
  padding: 20rpx;
}

.topListSwiper {
  height: 420rpx;
}

.swiperItem {
  width: 96%;
