.videoContainer{
  padding: 10rpx;
}
.header{
  display: flex;
  width: 100%;
 
  
}
.header .search{
  border: 1rpx solid #eee;
  border-radius: 10rpx;
  flex:1;
  margin: 0 20rpx;
  font-size: 26rpx;
  text-align: center;
  line-height: 60rpx;
  color: #a1a0a8
}
.header image{
  width: 60rpx;
  height: 60rpx;
}
/* nav */
.navScroll{
  margin-top: 12rpx;
  display: flex;
  white-space: nowrap;
  height: 60rpx;
}
.navScroll .navScrollItem{
  /* flex-wrap: nowrap; */
  padding: 0 30rpx;
  font-size: 32rpx;
  height: 60rpx;
  line-height: 60rpx;
}
.navScroll .navContent {
  height: 60rpx;
  box-sizing: border-box;
}

.navScrollItem .active {
  border-bottom: 1rpx solid #d43c33;
}

.videoScroll {
  margin-top: 15rpx;
  /* calc: 可以动态计算css的宽高， 运算符左右两侧必须加空格，否则计算会失效 */
  /* 视口单位： vh vw  1vh = 1%的视口高度  1vw = 1%的视口宽度*/
  height: calc(100vh - 152rpx);
 
  /*height: calc(100vh - 100rpx); 用来测试页面上拉触底*/
}
.videoItem {
  padding: 0 3% 0 3%;
  /* width: 100%;
  height: 360rpx;
  border-radius: 35rpx;
  margin-bottom: 50rpx; */
}
.txt{
  text-indent: 0.8em;
}
.videoItem .common {
  width: 100%;
  height: 360rpx;
  border-radius: 10rpx;
}
.videoItem .content {
  font-size: 26rpx;
  height:80rpx;
  line-height: 80rpx;
  max-width: 500rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

/* footer */
.footer {
  border-top: 1rpx solid #eee;
  padding: 20rpx 0;
  
}
.footer .avatar {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  vertical-align: middle;
}

.footer  .nickName {
  font-size: 26rpx;
  vertical-align: middle;
  margin-left: 20rpx;
}

.footer .comments_praised {
  position: relative;
  top: -27rpx;
  
  float: right;
}

.comments_praised .btn {
  display: inline;
  padding: 0;
  background-color: transparent;
  border-color: transparent;
}

.comments_praised .btn:after {
  border: none;
}

.comments_praised .item {
  margin-left: 50rpx;
  position: relative;
}

.comments_praised .item .count {
  position: absolute;
  top: -20rpx;
  font-size: 20rpx;
}